{
    "name": "knops/toolbox",
    "description": "My Toolbox",
    "type": "library",
    "autoload": {
        "files": ["src/functions.php"],
        "psr-4": {
            "Knops\\Toolbox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Knops\\ToolboxTests\\": "tests"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "psr/http-message": "^1.0",
        "slim/slim": "^4.9",
        "nesbot/carbon": "^2.57",
        "doctrine/orm": "^2.11",
        "vimeo/psalm": "^4.22",
        "phpstan/phpstan": "^1.5"
    },
    "scripts": {
        "phpstan": "phpstan",
        "phpunit": "phpunit --testdox",
        "test": [
            "@phpunit",
            "@phpstan"
        ]
    }
}
